{{define "register"}}
{{template "top" .}}
<div id="main" data-handler="register" class="main align-items-center justify-content-center flex-column overflow-y-auto">
  <div class="d-flex flex-column vscroll w-100">

    {{- /* Set up the initial application password. Only shown if app is not already initialized. */ -}}
    <form class="card mx-auto my-5 bg1 border1{{if .Initialized}} d-hide{{end}}" id="appPWForm">
      <div class="bg2 px-2 py-1 text-center fs18">Set App Password</div>
      <div class="p-4">
        <div class="fs16">Set your app password. This password will protect your DEX account keys and connected wallets.</div>
        <hr class="dashed my-4">
        <div class="pb-3">
          <label for="appPW" class="pl-1 mb-1">Password</label>
          <input type="password" class="form-control select" id="appPW" autocomplete="new-password">
        </div>
        <div class="pb-3">
          <label for="appPWAgain" class="pl-1 mb-1">Password Again</label>
          <input type="password" class="form-control select" id="appPWAgain" autocomplete="off">
        </div>
        <div class="pl-4">
          <input class="form-check-input" type="checkbox" id="rememberPass">
          <label for="rememberPass" class="pl-1">Remember my password</label>
        </div>
        <div class="pb-3 d-hide mt-2" id="seedRestore">
          <label for="seedInput" class="pl-1 mb-1">Restoration Seed</label>
          <input type="text" class="form-control select" id="seedInput" autocomplete="off">
        </div>
        <div class="d-flex justify-content-between mt-4">
          <div class="px-1 fs13 pointer d-flex justify-content-start align-items-center" id="showSeedRestore"><span class="ico-plus fs11"></span> <div class="pl-2">Restore from seed</div></div>
          <span></span>
          <button id="appPWSubmit" type="submit" class="col-8 justify-content-center fs15 bg2 selected">Submit</button>
        </div>
        <div class="fs15 pt-3 text-center d-hide errcolor" id="appPWErrMsg"></div>
      </div>
    </form>

    {{- /* Form to set up a wallet. Shown on demand when a user clicks a setupWallet button. */ -}}
    <form class="card mx-auto my-5 d-hide" id="newWalletForm">
      {{template "newWalletForm" }}
    </form>

    {{- /* DEX ADDRESS FORM */ -}}
    <form class="card mx-auto my-5 bg1 border1{{if not .Initialized}} d-hide{{end}}" id="dexAddrForm">
      {{template "dexAddrForm"}}
    </form>

    {{- /* Confirm registration with app password. */ -}}
    <form class="card mx-auto my-5 bg1 border1 d-hide" id="confirmRegForm">
      {{template "confirmRegistrationForm"}}
    </form>

    {{- /* registration failed low balance. */ -}}
    <form class="card mx-auto my-5 bg1 border1 d-hide" id="failedRegForm">
      <div class="bg2 px-2 py-1 text-center fs18">Insufficient funds</div>
      <div class="p-4">
        <div class="fs16">
          Registration failed. Look below for more details:
        </div>
        <div class="fs15 pt-3 text-center d-hide errcolor" id="regFundsErr"></div>
        <hr class="dashed mt-4">
      </div>
    </form>

    {{- /* Wait for funds */ -}}
    <form class="card mx-auto my-5 bg1 border1 d-hide pt-4 px-3" id="depoWait">
      <div class="corner-bttn hoverbg" id="depoWaitClose"><span class="ico-cross"></span></div>
      <div class="fs15">
        It's time to pay your registration fee, but your new wallet doesn't have the balance yet. 
                     Send at least <span id="depoWaitFee"></span> plus some more for transaction fees
	                 to your deposit address.
      </div>
      <div class="mono demi mt-2 bg2 p-2" id="depoAddr"></div>
      <div class="d-flex align-items-center justify-content-center py-3">
        <div class="fs14 demi mr-2">Current Balance:</div>
        <div id="depoWaitBal"></div>
      </div>

      <div class="fs12">refreshing in <span id="depoRefresh">15</span> seconds</div>

    </form>

  </div>
</div>
{{template "bottom"}}
{{end}}
